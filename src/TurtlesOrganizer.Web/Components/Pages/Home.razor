@page "/"

<PageTitle>Home - Turtles Organizer</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Turtles Organizer</h1>
        <p class="lead">Manage your training sessions and attendees efficiently</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">📚 Training Management</h5>
                    <p class="card-text">Create and organize training topics with detailed descriptions and scheduling.</p>
                    <a href="/trainings" class="btn btn-primary">View Trainings</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">📅 Session Scheduling</h5>
                    <p class="card-text">Schedule training sessions, set capacity limits, and manage trainers.</p>
                    <a href="/trainings/create" class="btn btn-primary">Create Training</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">👥 Attendee Registration</h5>
                    <p class="card-text">Register attendees for training sessions and track participation.</p>
                    <a href="/register" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3>Features</h3>
        <ul>
            <li>User registration and authentication</li>
            <li>Create and manage trainings</li>
            <li>Schedule multiple sessions per training</li>
            <li>Track session capacity and availability</li>
            <li>Register attendees for sessions</li>
            <li>View upcoming training sessions</li>
        </ul>
    </div>
</div>
